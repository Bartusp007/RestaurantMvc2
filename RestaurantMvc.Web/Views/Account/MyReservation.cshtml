@model IEnumerable<RestaurantMvc.ViewModel.ViewModels.MyReservationViewModel>

<div class="jumbotron">
    <h1>List of reservations</h1>
</div>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReservationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HowManyPeoples)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromWhatTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToWhatTime)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(model => item.Email)
            </td>
            <td>
                @Html.DisplayFor(model => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(model => item.ReservationDate)
            </td>
            <td>
                @Html.DisplayFor(model => item.HowManyPeoples)
            </td>
            <td>
                @Html.DisplayFor(model => item.FromWhatTime)
            </td>
            <td>
                @Html.DisplayFor(model => item.ToWhatTime)
            </td>

        </tr>
    }
</table>
